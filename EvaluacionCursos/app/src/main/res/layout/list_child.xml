<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/option1"
            android:padding="8dp"
            android:text="Option 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/option1"
            android:id="@+id/option2"
            android:padding="8dp"
            android:text="Option 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Inicio numero actividad -->

                <TextView
                    android:id="@+id/tvNumeroActividad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dip"
                    android:paddingEnd="4dip"
                    android:paddingLeft="8dip"
                    android:paddingRight="4dip"
                    android:paddingStart="8dip"
                    android:paddingTop="8dip"
                    android:text="1"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <!-- Fin numero actividad -->


                <!-- Inicio descripcion actividad -->

                <TextView
                    android:id="@+id/tvdescripcionActividad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:paddingEnd="8dip"
                    android:paddingLeft="4dip"
                    android:paddingRight="8dip"
                    android:paddingStart="4dip"
                    android:text="Evaluacion demasiado larga de un hp docete"
                    android:textColor="@android:color/black" />

                <!-- Fin descripcion actividad -->

            </LinearLayout>

            <!-- Inicio porcentaje actividad -->

            <TextView
                android:id="@+id/tvPorcentajeActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dip"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:paddingStart="8dip"
                android:text="50%"
                android:textColor="@android:color/black" />

            <!-- Fin porcentaje actividad -->
        </LinearLayout>

        <!-- Inicio nota actividad -->

        <TextView
            android:id="@+id/tvNotaActividad"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:width="45dp"

            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="SIN"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Fin nota actividad -->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shadow"
        />

</android.support.v7.widget.CardView>

