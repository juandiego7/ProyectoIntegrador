<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gris_oscuro">

        <RelativeLayout
            style="@style/SelectableItemBackground.GrisOscuro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTeacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingEnd="8dip"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:paddingStart="8dip"
                android:paddingTop="8dip"
                android:paddingBottom="1dip"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_below="@+id/tvTeacherName"
                android:id="@+id/btnSend"
                android:paddingRight="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dip"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:textColor="@color/verde_6c9a06"
                android:text="@string/sendEvaluation"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_below="@id/btnSend"
                android:background="@color/verde_6c9a06" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>