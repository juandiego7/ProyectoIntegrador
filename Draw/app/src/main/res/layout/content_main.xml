<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="projects.juandiego.com.draw.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imgNew"
            android:src="@drawable/ic_plus"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imgPaint"
            android:src="@drawable/ic_painting"
            android:layout_weight="1" />

        <ImageButton
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imgDelete"
            android:src="@drawable/ic_delete"
            android:layout_weight="1" />

        <ImageButton
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imgSave"
            android:src="@drawable/ic_save"
            android:layout_weight="1" />
    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="0dp"
        class="projects.juandiego.com.draw.Painting"
        android:id="@+id/painting"
        android:background="@android:color/white"
        android:layout_weight="7" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_color"
            android:tag="@android:color/black"
            android:background="@android:color/black"
            app:srcCompat="@android:color/black"
            android:id="@+id/imgColorBlack"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_color"
            android:tag="@android:color/holo_red_light"
            android:background="@android:color/holo_red_light"
            app:srcCompat="@android:color/holo_red_light"
            android:id="@+id/imgColorRed"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_color"
            android:tag="@android:color/holo_green_dark"
            android:background="@android:color/holo_green_dark"
            app:srcCompat="@android:color/holo_green_dark"
            android:id="@+id/imgColorGreen"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_color"
            android:tag="@android:color/holo_blue_dark"
            android:background="@android:color/holo_blue_dark"
            app:srcCompat="@android:color/holo_blue_dark"
            android:id="@+id/imgColorBlue"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_color"
            android:tag="@android:color/holo_orange_dark"
            android:background="@android:color/holo_orange_dark"
            app:srcCompat="@android:color/holo_orange_dark"
            android:id="@+id/imgColorOrange"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
