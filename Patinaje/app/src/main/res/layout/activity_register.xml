<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projects.juandiego.com.patinaje.RegisterActivity">

        <ScrollView
            android:id="@+id/h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/formulario"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:textColorHint="@color/colorPrimary"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textSize="20dp"
                            android:hint="Nombre"
                            android:id="@+id/txtNombre"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_apellido"
                        android:layout_below="@+id/til_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:textColorHint="@color/colorPrimary"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Apellido"
                            android:inputType="textPersonName"
                            android:textSize="20dp"
                            android:id="@+id/txtLastName"
                            android:layout_below="@+id/til_nombre"
                            android:layout_alignParentStart="true" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_cedula"
                        android:layout_below="@+id/til_apellido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:textColorHint="@color/colorPrimary"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Numero de Documento"
                            android:inputType="number"
                            android:textSize="20dp"
                            android:id="@+id/txtIdentidad"
                            android:layout_below="@+id/til_nombre" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout2"
                        android:layout_below="@+id/til_cedula" >

                        <TextView
                            android:textSize="20dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Fecha Nacimiento: 03/07/16"
                            android:id="@+id/lblDate" />

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:onClick="updateDate"
                            android:id="@+id/btnDate"
                            android:backgroundTint="@android:color/transparent"
                            app:srcCompat="@mipmap/birthday" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/formulario"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:text="Cancelar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnCancelar"
                        android:background="@drawable/corner_rounded"
                        android:textColor="@android:color/white"
                        android:textSize="20dp" />

                    <Button
                        android:text="Registrar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnRegistrar"
                        android:background="@drawable/corner_rounded"
                        android:textColor="@android:color/white"
                        android:textSize="20dp"
                        android:layout_alignParentEnd="true"
                        android:onClick="registraUsuario" />

                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>

</RelativeLayout>
